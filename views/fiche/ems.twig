    {% endif %}

    {% if _Hab14 != "" %}
      <p class="{% if agent.hab_14 == 2 %}green{% elseif agent.hab_14 == 1 %}orange{% else %}red{% endif %}">{{ _Hab14 }}</p>
    {% endif %}

    {% if _Hab15 != "" %}
      <p class="{% if agent.hab_15 == 2 %}green{% elseif agent.hab_15 == 1 %}orange{% else %}red{% endif %}">{{ _Hab15 }}</p>
    {% endif %}
  </div>
</section>

<section class="liste">
  <h1>Véhicules</h1>
  {% for voiture in voitures %}
  <div class="content">
    <img src="http://{{ _CopServeur }}/assets/img/vehicule/{{ voiture.lien }}" alt="Image {{ voiture.nom }}">
    <p>{{ voiture.plaque|upper }}</p>
  </div>
  {% else %}
  <div class="content">
    <img src="/assets/img/logo.png" alt="Logo {{ _nomFaction }}">
    <p>Pas de véhicule enregistré</p>
  </div>
  {% endfor %}
</section>
{% endblock %}

{% block script %}{% endblock %}
