    {% endif %}

    {% if _Hab4 != "" %}
      <p class="{% if agent.hab_4 == 2 %}green{% elseif agent.hab_4 == 1 %}orange{% else %}red{% endif %}">{{ _Hab4 }}</p>
    {% endif %}

    {% if _Hab5 != "" %}
      <p class="{% if agent.hab_5 == 2 %}green{% elseif agent.hab_5 == 1 %}orange{% else %}red{% endif %}">{{ _Hab5 }}</p>
    {% endif %}

    {% if _Hab6 != "" %}
      <p class="{% if agent.hab_6 == 2 %}green{% elseif agent.hab_6 == 1 %}orange{% else %}red{% endif %}">{{ _Hab6 }}</p>
    {% endif %}

    {% if _Hab7 != "" %}
      <p class="{% if agent.hab_7 == 2 %}green{% elseif agent.hab_7 == 1 %}orange{% else %}red{% endif %}">{{ _Hab7 }}</p>
    {% endif %}

    {% if _Hab8 != "" %}
      <p class="{% if agent.hab_8 == 2 %}green{% elseif agent.hab_8 == 1 %}orange{% else %}red{% endif %}">{{ _Hab8 }}</p>
    {% endif %}

